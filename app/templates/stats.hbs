<div class="stats row">
  <div class="stat">
    {{ translate 'div.label' 'stats.imagesRanked' }}
    <div class="value">{{formatNumber view.ranked}}</div>
  </div>
  
  <div class="stat">
    {{ translate 'div.label' 'stats.imagesRemaining' }}
    <div class="value">{{formatNumber view.remaining}}</div>
  </div>
  
  <div class="stat">
    {{ translate 'div.label' 'stats.communityProgress' }}
    <div class="value">{{formatNumber view.progress}}%</div>
  </div>
  
  <div class="stat">
    {{ translate 'div.label' 'stats.regionsAvailable' }}
    <div class="value">{{formatNumber view.regions}}</div>
  </div>
</div>
