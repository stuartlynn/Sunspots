<div class="home">
  <div class="row">
    <div class="welcome">
      {{translate 'h2' 'home.welcome'}}
      
      <h1>
        <img onerror="this.src='images/logo.png'" src="images/logo.svg">
      </h1>
      
      {{#unless App.outOfData}}
        {{translate 'h3' 'home.tagline'}}
        
        {{#link-to 'classify' classNames="button"}}
          {{translate 'span' 'home.callToAction'}}
        {{/link-to}}
        
        {{#link-to 'science' classNames="science-link"}}
          {{translate 'em' 'home.prompt'}}
        {{/link-to}}
      {{else}}
        <div class="row">
          {{translate 'h1' 'donePage.title'}}
        </div>
        
        {{partial 'complete_message'}}
      {{/unless}}
    </div>
  </div>
  
  {{view App.StatsView}}
</div>
