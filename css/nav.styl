nav
  text-align: right
  line-height: 30px
  
  .logo
    condensed-font()
    float: left
    margin: 0
    font-size: 30px
    text-shadow: -3px 4px 0 rgba(0, 0, 0, 0.5)
    text-transform: uppercase
    letter-spacing: 1px
    
    a
      display: inline-block
  
  .nav-link
    transitioned()
    title-font(700)
    display: inline-block
    margin: 0 8px
    padding: 6px 12px
    font-size: 12px
    line-height: 12px
    border-radius(20px)
    border: 3px solid rgba($red, 0)
    text-shadow: -1px 1px 0 rgba(0, 0, 0, 0.3)
    letter-spacing: 1px
    background-color: rgba($red, 0)
    
    &:hover, &.active
      border: 3px solid $red
    
    &.active
      background-color: $red
    
    &.active:hover
      background-color: rgba($red, 0.8)
      border: 3px solid transparent
