nav
  line-height: 30px
  
  .logo
    @extend .col-md-3
    @extend .col-sm-12
    @extend .col-xs-12
    condensed-font()
    float: left
    margin: 0
    font-size: 30px
    text-shadow: -1px 1px 0 rgba(0, 0, 0, 0.5)
    text-transform: uppercase
    letter-spacing: 1px
    
    text-align: center
    @media $media-min-desktop
      text-align: left
    
    a
      display: inline-block
  
  .links
    @extend .col-md-9
    @extend .col-sm-12
    @extend .col-xs-12
    
    text-align: center
    @media $media-min-desktop
      text-align: right
  
  .nav-link
    transitioned()
    title-font(700)
    display: inline-block
    margin: 0 14px 0 0
    padding: 6px 12px
    font-size: 12px
    line-height: 12px
    border-radius(20px)
    border: 3px solid rgba($red, 0)
    text-shadow: -1px 1px 0 rgba(0, 0, 0, 0.3)
    letter-spacing: 1px
    background-color: rgba($red, 0)
    
    &:hover, &.active
      border: 3px solid $red
    
    &.active
      background-color: $red
    
    &.active:hover
      background-color: rgba($red, 0.8)
      border: 3px solid transparent
    
    &.feedback
      border: 3px solid rgba($red, 0.3)
      background-color: rgba($red, 0.5)
