html, body
  min-width: 320px

body
  standard-font()
  background-color: $blue
  color: $white
  
  &:after
    position: fixed
    z-index: -1
    content: ''
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: linear-gradient(rgba($blue, 0) 0%, rgba($blue, 0.5) 20%, rgba($blue, 0.8) 80%, rgba($blue, 1) 100%)

a:link, a:active, a:visited
  outline: 0
  text-decoration: none
  color: $white
  cursor: pointer

.background-wrapper
  position: absolute
  z-index: -2
  top: 0
  left: 0
  width: 100%
  opacity: 0.5
  
  .sun
    position: absolute
    top: -50px
    left: 0
    width: 100%

nav
  margin: 0 0 20px 0
  
  @media $media-min-tablet
    margin: 20px 0 65px 0

#app
  padding-top: 50px
  min-height: 400px

.zooniverse-top-bar
  standard-font()
  background-color: rgba($black, 0.5)
  
  .corner path
    fill: rgba($black, 0.5)
    stroke: rgba($black, 0.5)
  
  &:before
    border-color: rgba($black, 0.5) rgba($black, 0.5) transparent transparent

.zooniverse-dialog
  standard-font()

.zooniverse-footer
  rule-above()
  margin: 50px auto 20px auto
  padding-top: 40px
  color: #5C7992
  
  .zooniverse-logo
    color: $black
