#summer-of-science
  background: #f64d4c
  height: 70px
  position: relative

  .content
    color: white
    line-height: 70px
    position: relative
    text-align: center
    z-index: 1

    button
      background: #6fa0db
      border: 0
      border-radius: 3px
      color: white
      font-weight: 700
      margin: 0 1em
      padding: 6px 12px

  .progress
    background: #c03332
    height: 100%
    left: 0
    position: absolute
    top: 0
    transition: all 3s ease-in-out
    width: 0
    z-index: 0

  .current, .goal
    font-size: 2em
    line-height: 70px
    position: absolute
    top: 0

  .current
    color: #f64d4c
    left: 1em

  .goal
    color: #c03332
    right: 1em
