.science
  position: relative
  
  nav
    rule-below()
    @extend .col-md-10
    @extend .col-sm-12
    @extend .col-xs-12
    @extend .col-md-offset-1
    margin-top: 0
    margin-bottom: 20px
    padding-bottom: 10px
    
    @media $media-min-desktop
      text-align: left
    
    .links
      @extend .col-md-12
      @extend .col-sm-12
      @extend .col-xs-12
      
      @media $media-min-desktop
        text-align: left
      
      .nav-link
        margin-right: 5px
  
  .content.row
    .captioned-image
      &.left
        float: left
        clear: left
        margin: 0 15px 15px 0
      
      &.right
        float: right
        clear: right
        margin: 0 0 15px 15px
      
      display: block
      margin: 15px
      text-align: center
      
      img
        border: 5px solid rgba($white, 0.8)
        box-shadow: -2px 2px 3px 0 rgba($black, 0.5)
      
      .caption
        display: none
