.stats
  margin-top: 75px
  border-radius: 6px
  box-shadow: inset 0 0 2px 2px rgba(0, 0, 0, 0.05)
  background-color: rgba(0, 0, 0, 0.10)
  text-align: center
  
  .stat
    @extend .col-md-3
    @extend .col-sm-6
    @extend .col-xs-6
    padding: 30px 20px
    
    @media $media-max-phone
      padding: 10px 5px
    
    .label
      title-font()
      color: $red
      font-size: 12px
      font-weight: bold
      text-transform: uppercase
      letter-spacing: 4px
      
      @media $media-max-phone
        letter-spacing: 1px
    
    .value
      condensed-font()
      font-size: 48px
      letter-spacing: 3px
      
      @media $media-max-phone
        font-size: 16px
        letter-spacing: 1px
